{
  "name": "closing-connect",
  "version": "0.0.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "install-all": "npm install && cd ./api && npm install && cd ../frontend && npm install",
    "watch-front": "cd frontend && npm run-script watch",
    "watch": "concurrently \"npm run watch-front\"",
    "update-version": "replace-in-file --configFile=replaceVersion.js"
  },
  "nodemonConfig": {
    "ext": "js,jsx,html,json,css,ts,tsx,svg,png,gif,jpg",
    "watch": [
      "package.json"
    ],
    "exec": "copy-files-from-to && update-version"
  },
  "author": "Dameon Laird",
  "devDependencies": {
    "@azure/functions": "^4.7.2-preview",
    "concurrently": "^7.6.0",
    "copy-files-from-to": "^3.6.0",
    "nodemon": "^3.0.1",
    "npm-build-zip": "^1.0.3",
    "replace-in-file": "^7.0.2",
    "typescript-plugin-css-modules": "^4.1.1"
  }
}
